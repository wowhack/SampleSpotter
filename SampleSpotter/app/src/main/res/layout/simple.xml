<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#8d000000"
        android:orientation="vertical"
        android:padding="8dp" >

        <com.wowhack2014.djperro.samplespotter.AnimatedGifImageView
            android:id="@+id/animatedGifView"
            android:layout_width="620dp"
            android:layout_height="400dp" />


         <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAMPLED FROM: Zlatan - Du gamla du fria"
            android:textColor="#ffff3648"
            android:textSize="32dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:text="Play song"
            android:id="@+id/playButton"
            android:onClick="playSampledSongFloat"/>

    </LinearLayout>

</merge>